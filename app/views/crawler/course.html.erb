<ol class="breadcrumb">
  <li><%= link_to 'Home', crawler_courses_path %></li>
  <li class="active"><%= @course.code %></li>
</ol>

<h2>Category List (<%= @course.code %>) </h2>

<div class="panel panel-default">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Posts</th>
        <th>Last Updated</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
          <tr>
              <td><%= link_to category.name, crawler_category_path(category.id) %></td>
              <td><%= category.posts %></td>
              <td><%= category.last_updated %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>



