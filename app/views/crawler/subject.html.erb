<p>@Dylan Qin</p>

<ol class="breadcrumb">
  <li><%= link_to 'Home', crawler_courses_path %></li>
  <li><%= link_to @subject.category.course.code, crawler_course_path(@subject.category.course.id) %></li>
  <li><%= link_to @subject.category.name, crawler_category_path(@subject.category.id) %></li>
  <li class="active">Q & A (<%= @subject.name %>)</li>
</ol>

<h2>Question and Answer (Post # <%= @subject.post %> )</h2>

<% @qnas.each do |qna| %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Answered By</th>
      <th>Date Answered</th>
      <th>Date Posted</th>
      <th>Category</th>
      <th>Subject</th>      
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= qna.answered_by %></td>
      <td><%= qna.date_answered %></td>
      <td><%= qna.date_post %></td>
      <td><%= qna.subject.category.name %></td>
      <td><%= qna.subject.name %></td>            
    </tr>
  </tbody>
</table>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Question</h3>
  </div>
  <div class="panel-body">
    <%= qna.question %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Answer</h3>
  </div>
  <div class="panel-body">
    <%= qna.answer %>
  </div>
</div>

<br/>
<br/>
<br/>
<br/>
<hr/>
The following is in development !
<br/>
<hr/>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Question Translation</h3>
  </div>
  <div class="panel-body">
    <%= qna.qnaadds[0].question %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Answer Translation</h3>
  </div>
  <div class="panel-body">
    <%= qna.qnaadds[0].answer %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Answer Translation Edit</h3>
  </div>
  <div class="panel-body">
    <form>
      <div>
        <textarea class="form-control" rows="3"> <%= qna.qnaadds[0].answer %> </textarea>
      </div>
      <hr/>
      <div class="pull-right">
        <button type="submit" class="btn btn-primary btn-sm">Confirm</button>
        <button type="button" class="btn btn-default btn-sm">Cancel</button>
      </div>        
    </form>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Answer Translation Edit</h3>
  </div>
  <div class="panel-body">
    <%= form_for :translation, url: crawler_translate_path do |f| %>
      <div>
        <%= f.text_area :text, class: 'form-control'%>
      </div>

      <hr/>

      <div class="pull-right">
        <%= f.submit "Confirm", class: 'btn btn-primary btn-sm'%>
      </div>
    <% end %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Tags</h3>
  </div>
  <div class="panel-body">
    <%= qna.qnaadds[0].tag %>
  </div>
</div>

<% end %>
